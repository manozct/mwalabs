doctype html
html(lang="en")
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        h1 Welcome to #{title}

        h2 Users Retrieval with node-fetch module using Promises
        div
            table
                thead
                    tr
                        th id
                        th Name
                        th Username
                        th Email
                        th City
                        th Zip code
                        th Latitude
                        th Longitude
                        th Website
                tbody
                    for user in usersListPromises
                        tr
                            td: !{user.id}
                            td: !{user.name}
                            td: !{user.username}
                            td: !{user.email}
                            td: !{user.address.city}
                            td: !{user.address.zipcode}
                            td: !{user.address.geo.lat}
                            td: !{user.address.geo.lng}
                            td: !{user.website}

